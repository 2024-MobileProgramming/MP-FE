<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/MissionIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/mission"
            android:contentDescription="@string/mission_icon_description"/>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_toEndOf="@id/MissionIcon"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginEnd="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MissionItemTitle"
            android:text="Mission Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MissionItemDescription"
            android:text="Mission Description Mission Description Mission Description Mission Description Mission Description Mission Description Mission Description Mission Description "
            android:textSize="14sp" />

    </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Mission_Status"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/star_empty"
            android:contentDescription="@string/mission_status_description"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>








